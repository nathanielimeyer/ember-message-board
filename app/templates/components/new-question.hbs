{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your name:</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="shortQuestion">Question:</label>
        {{input value=shortQuestion id="shortQuestion"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes:</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
